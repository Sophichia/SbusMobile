<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/searchText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aaFFFFFF"
        android:cursorVisible="false"
        android:hint="Search for a location or station"
        android:inputType="textPostalAddress"
        android:minHeight="40dp"
        android:padding="12dp"
        android:imeOptions="actionSearch"/>

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:background="#00FFFFFF"
        android:onClick="onSearchClick"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_search"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/near_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/searchText"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_background"
        android:onClick="onNearestStationClick"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_myplaces" />

    <ImageButton
        android:id="@+id/my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/near_station"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_background"
        android:onClick="onCurrentLocationClick"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_mylocation" />

    <ImageButton
        android:id="@+id/alerts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/my_location"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_background"
        android:onClick="onInfoClick"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_info_details" />

</RelativeLayout>
